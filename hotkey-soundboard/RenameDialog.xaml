<Window x:Class="hotkey_soundboard.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hotkey_soundboard"
        mc:Ignorable="d"
        Title="Rename" Height="175" Width="250" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock Width="200" Height="30" Margin="0,10,0,0" FontSize="16" Text="Enter the new profile name:" />
        <TextBox x:Name="ResponseTextBox" Width="175" Height="30" Margin="0,5,0,0" FontSize="18" MaxLength="20"/>
        <Button Width="50" Height="25" Margin="0,15,0,0" Content="OK" Click="btnOK_Click"/>
    </StackPanel>
</Window>
